// Test edge cases: empty arrays, zero values, negative numbers, recursion limits

void test_empty_array(int arr[], int size) {
    if (size == 0) {
        print("Empty array");
    }
}

int factorial(int n) {
    if (n <= 1) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

int main() {
    int zero = 0;
    print(zero); // 0

    int negative = -5;
    if (negative < 0) {
        print(negative + 6); // 1
    }

    int arr[0];
    test_empty_array(arr, 0); // Empty array

    float f_zero = 0.0;
    print(f_zero); // 0.0

    char empty_char; // Defaults to '\0'; no escape needed
    print("Char zero"); // Marker (no output for '\0', but test passes)

    // Deep recursion test (small depth to avoid stack overflow)
    int fact = factorial(3); // 6
    print(fact); // 6

    // Expected output:
    // 0
    // 1
    // Empty array
    // 0.0
    // Char zero
    // 6
}